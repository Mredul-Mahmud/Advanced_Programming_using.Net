
@{
    ViewBag.Title = "List";
}
@if (Model.Count == 0)
{
    <h3>No Channels to show</h3><br /><br />
    <h2>Create One?</h2>
    <a class="btn btn-success" href="/Channel/create">Create</a>
}
else
{
    <h2>List</h2>


    <a class="btn btn-success" href="/Channel/create">Create</a>
    <br>
    <table class="table table-bordered">
        <tr>
            <th>ChannelId</th>
            <th>ChannelName</th>
            <th>EstablishedYear</th>
            <th>Country</th>

            <th></th>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.ChannelId</td>
                <td>@c.ChannelName</td>
                <td>@c.EstablishedYear</td>
                <td>@c.Country</td>
                <td>
                    <a href="/Channel/details/@c.ChannelId" class="btn btn-info">Details</a>
                    <a href="/Channel/edit/@c.ChannelId" class="btn btn-warning">Edit</a>
                    <a href="/Channel/delete/@c.ChannelId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}