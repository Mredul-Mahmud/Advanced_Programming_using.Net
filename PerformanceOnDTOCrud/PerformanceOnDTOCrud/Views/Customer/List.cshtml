
@{
    ViewBag.Title = "List";
}
@if (Model.Count == 0)
{
    <h3>No Customers to show</h3>
}
else
{
    <h2>All Customer's Details</h2>
    <a href="/Customer/create" class="btn btn-success">Create</a><br />
   <br />
   <table class="table table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Joinning Date</th>
            <th>Operations</th>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CustomerId</td>
                <td>@c.FirstName @c.LastName</td>
                <td>@c.Email</td>
                <td>@c.Phone</td>
                <td>@c.Address</td>
                <td>@c.DateJoined</td>

                <td>
                    <a href="/Customer/details/@c.CustomerId" class="btn btn-info">Details</a>
                    <a href="/Customer/edit/@c.CustomerId" class="btn btn-warning">Edit</a>
                    <a href="/Customer/delete/@c.CustomerId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }

    </table><br />

}
@if (TempData["Msg"] != null)
{
    <span class="alert alert-info">@TempData["Msg"]</span>
}


