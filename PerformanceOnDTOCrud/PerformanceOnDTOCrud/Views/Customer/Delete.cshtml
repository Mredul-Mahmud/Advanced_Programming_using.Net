
@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to Delete?</h2>

<h1>Name: @Model.FullName</h1>
<h3>Id: @Model.CustomerId</h3>
<h3>Email: @Model.Email</h3>
<h3>Phone: @Model.Phone</h3>
<h3>Address: @Model.Address</h3>
<h3>Joinning Date: @Model.DateJoined</h3>


<form method="post">
    <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
    <input type="submit" value="Delete" class="btn btn-danger" />

    <a class="btn btn-success" href="/Customer/List">Cancel</a>
    <br />
</form>



